{
    "name": "Dlsite DarkMode",
    "version": "0.0.0",
    "manifest_version": 2,
    "description": "DLSiteの外観をDarkMode化",
    "icons": {},
    "content_scripts": [
        {
            "matches": [
                "https://www.dlsite.com/*"
            ],
            "js": [
                "jquery-3.5.1.min.js",
                "js/home.js"
            ],
            "css": [
                "style/home/home.css"
            ]
        },
        {
            "matches": [
                "https://play.dlsite.com/*"
            ],
            "js": [
                "jquery-3.5.1.min.js",
                "js/play.js"
            ],
            "css": [
                "style/play/playCommon.css"
            ]
        },
        {
            "matches": [
                "https://play.dlsite.com/#/library"
            ],
            "css": [
                "style/play/playCommon.css",
                "style/play/playLibrary.css"
            ]
        },
        {
            "matches": [
                "https://play.dlsite.com/#/mylist"
            ],
            "css": [
                "style/play/playCommon.css"
            ]
        }
    ]
}